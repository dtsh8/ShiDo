@model IEnumerable<ShiDo.Models.Gallery.Picture>

@{
    ViewBag.Title = "Изображения";
}

<h2>Изображения</h2>

<p>
    @Html.ActionLink("Добавить новое изображение", "Create", "Picture", new { @class="btn btn-primary"})
   
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Gallery.GalleryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var picture in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => picture.Gallery.GalleryName)
            </td>
            <td>
                <img class="img-thumbnail" width="200" src="@Url.Action("Show", "Picture", new { id = picture.PictureId})" alt="@picture.Name" />

            </td>
            <td>
                @Html.DisplayFor(modelItem => picture.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = picture.PictureId }) |
                @Html.ActionLink("Details", "Details", new { id = picture.PictureId }) |
                @Html.ActionLink("Delete", "Delete", new { id = picture.PictureId })
            </td>
        </tr>
    }

</table>
