@model IEnumerable<ShiDo.Models.Gallery.Gallery>

@{
    ViewBag.Title = "Галереи";
}

<h2>Галереи</h2>

<p>
    @Html.ActionLink("Создать новую галерею", "Create", "Gallery", new { @class="btn btn-primary"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GalleryName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.GalleryName)
        </td>
        <td>
            @Html.ActionLink("Ред.", "Edit", new { id=item.GalleryId }) |
            @Html.ActionLink("Детали", "Details", new { id=item.GalleryId }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.GalleryId })
        </td>
    </tr>
}

</table>
